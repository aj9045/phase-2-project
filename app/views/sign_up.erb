<div class="container">
  <h1>Sign Up</h1>

  <form id="sign-up" method="post" action="/sign_up">

    <label class="label" for="name">Username</label>
    <input type="text" name="user[username]" placeholder="Username" >*
    <br>

    <label class="label" for="name">Name</label>
    <input type="text" name="user[name]" placeholder="Name" >*
    <br>

    <label class="label" for="password">Password</label>
    <input type="password" name="user[password]" placeholder="Password">*
    <br>

    <label class="label" for="password">Password Confirmation</label>
    <input type="password" name="user[password_confirmation]" placeholder="Confirm Password">*
    <br>
    <%= display_error %>
    <br>
    <div class="submit"><input type="submit" value="Sign Up"></div>
  </form>

</div>
